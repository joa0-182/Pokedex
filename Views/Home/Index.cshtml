@model Pokedex.ViewModels.IndexVM
@{
    ViewData["Title"] = "Home Page";
}

<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>Pokédex</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-lg my-2 text-white bg-secondary btn-filter"
                    onclick="filter('all')">Ver Todos</button>
                @foreach (var types in Model.Types)
                {
                    <button id="btn-@types.Name.ToLower()" class="btn btn-sm my-2 text-white btn-filter"
                    onclick="filter('@types.Name.ToLower()')" style="background-color:@types.Color">
                        @types.Name
                    </button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            @foreach (var pokemon in Model.Pokemons)
            {
                <div class="col">
                    <div class="card shadow-sm cursor-pointer @string.Join(" ", pokemon.Types.Select(t => t.Type.Name.ToLower()).ToList() )"
                    onclick="GetInfo(@pokemon.Number)">
                        <img src="@pokemon.Image" class="card-img-top" width="100%" height="300" alt="@pokemon.Name" />
                        <div class="card-body">
                            <p class="card-text mb-0">Nº @pokemon.Number.ToString("000")</p>
                            <h3 class="card-title">@pokemon.Name</h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @foreach (var type in pokemon.Types)
                                    {
                                        <a onclick="filter('@type.Type.Name.ToLower()')" class="btn my-2 text-white"
                                    style="background-color:@type.Type.Color">@type.Type.Name</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div id="zeroPokemon" class="col-lg-12 text-center">
                <h1 class="my-3 text-danger">Nenhum Pokemon Encontrado</h1>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/site.js"></script>
<script>
    let toFilter = '@Html.Raw(ViewData["Filter"])';
    filter(toFilter);

    function GetInfo(number) {
        window.location = '@Url.Action("Details", "Home")' + '?Number=' + number;
    }
</script>
}